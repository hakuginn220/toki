{
  "private": true,
  "name": "toki",
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "husky": "^4.2.3",
    "lerna": "^3.20.2",
    "lint-staged": "^10.0.7",
    "prettier": "^1.19.1"
  },
  "scripts": {
    "start": "lerna run start --stream",
    "fmt": "prettier --write \"**/*.{html,css,js,json,md,ts,tsx}\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{html,css,js,json,md,ts,tsx}": [
      "prettier --write"
    ]
  }
}
